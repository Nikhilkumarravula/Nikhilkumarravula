pragma solidity >=0.7.0 <0.9.0;
contract Simplestorage {
    struct Studentdetails{
        string name;
        uint marks;
        string subject;
        uint total;
        }

    Studentdetails[] public studentdetails;
    mapping(string => uint)

    function adddetails (string memory _name,uint _marks,string _subject)public {
        studentdetails=Studentdetails.push(_name,_marks,_subject);
    }





}
